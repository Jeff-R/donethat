= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :file
    = f.text_field :file
  .field
    = f.label :event_time
    = f.datetime_select :event_time
  .field
    = f.label :project_id
    = collection_select f, :project_id, @projects.all, :id, :name
    -# = f.select :project_id, @projects.all, :id, :name
  .actions
    = f.submit 'Save'
